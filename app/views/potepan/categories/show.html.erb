      <section class="lightSection clearfix pageHeader">
        <div class="container">
          <div class="row">
            <div class="col-xs-6">
              <div class="page-title">
                <h2><%= @taxon.name %></h2>
              </div>
            </div>
            <div class="col-xs-6">
              <ol class="breadcrumb pull-right">
                <li>
                  <%= link_to 'Home', potepan_index_path, class: "home" %>
                </li>
                <li>
                  <a href="#">shop</a>
                </li>
                <li class="active"><%= @taxon.name %></li>
              </ol>
            </div>
          </div>
        </div>
