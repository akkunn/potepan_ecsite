                          <ul id="<%= taxonomy.id %>" class="collapse collapseItem">
                            <% taxonomy.root.leaves.each do |taxon| %>
                              <li>
                                <%= link_to potepan_category_path(taxon.id) do %>
                                  <i class="fa fa-caret-right" aria-hidden="true"></i><%= taxon.name %> <span>(<%= taxon.products.count %>)</span>
                                <% end %>
                              </li>
                            <% end %>
                            <%# <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>Shirts <span>(2)</span></a></li> %>
                          </ul>
                        <% end %>
