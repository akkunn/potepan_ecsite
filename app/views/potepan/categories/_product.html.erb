<div class="col-sm-4 col-xs-12">
  <div class="productBox">
    <%= link_to potepan_product_path(product.id) do %>
      <div class="productImage clearfix">
        <%= image_tag(product.display_image.attachment(:small), alt: "sample-image") %>
      </div>
      <div class="productCaption clearfix">
        <h5 style="margin-bottom: 25px; font-size: 14px; letter-spacing: 0;"><%= product.name %></h5>
        <h3><%= product.display_price %></h3>
      </div>
    <% end %>
  </div>
</div>
